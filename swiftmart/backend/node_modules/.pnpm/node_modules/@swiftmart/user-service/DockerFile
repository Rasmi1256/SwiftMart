FROM node:24-alpine AS builder

# Set working directory inside the container
WORKDIR /app

# Copy package files first to leverage Docker cache for dependencies
COPY package*.json ./

# Install dependencies, prioritizing production dependencies
RUN npm install

# Copy the rest of the source code
COPY . .

# Build the TypeScript code into JavaScript
RUN npm run build


# --- Stage 2: Production Stage ---
# Use a minimal production-ready Node image
FROM node:24-alpine AS production

# Set working directory
WORKDIR /app

# Copy only the necessary files from the builder stage
# Copy production dependencies (node_modules)
COPY --from=builder /app/node_modules ./node_modules
# Copy the compiled JavaScript code (dist or build folder)
COPY --from=builder /app/dist ./dist
# Copy package.json (needed to run the start script)
COPY --from=builder /app/package.json ./

# Expose the service port (e.g., 3001 for User Service)
EXPOSE 3001

# Command to run the service
# Note: Ensure DATABASE_URL and JWT_SECRET are provided at runtime (e.g., via Kubernetes Secret or Docker Compose)
CMD ["node", "dist/server.js"]
